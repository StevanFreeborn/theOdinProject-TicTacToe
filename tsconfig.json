{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "./Public/js",
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src", "types.d.ts", "tests"],
  "exclude": ["node_modules"]
}
